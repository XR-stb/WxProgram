/* pages/index/index.wxss */
.container-bgcolor{
    background-color: #00a480;
}

.container{
    display: flex;
    flex-direction: column;
    padding: 0 22rpx;
    background-color: #f6f6f6;
    border-radius: 40rpx 40rpx 0 0;
}

.topSearch{
    display: flex;
    flex-direction: row;
    background-color: #F5F5F5;
    border-radius: 10rpx;
    margin-top: 30rpx;
    border: 3rpx solid #ebebeb;
}

.topSearch image{
    margin: 15rpx 0;
}

.topSearch input{
    margin: 10rpx 10rpx;
}

.foodSwip{
    padding: 30rpx 0rpx;
}

.container swiper{
    width: 100%;
    overflow: hidden;
    border-radius: 20rpx;
}

swiper image{
    width: 100%;
    border-radius: 16rpx;
}

.nav {
    display: flex;
    flex-direction: row;
    /*wrap 自动换行 */
    flex-wrap: wrap;
    justify-content: space-between;
    background-color:  #fff;
    border-radius: 16rpx;
    border: 5rpx solid #ebebeb;
}

.nav .menu { /*注意这里的选择器 */
    display: flex;
    flex-direction: column;
    width: 25%;
    justify-content: center;
    align-items: center;
    margin-bottom: 10rpx;
    margin-top: 20rpx;
}

.nav .menu navigator{ /*注意这里的选择器 */
    display: flex;
    flex-direction: column;
    align-items: center;
}

.menu text{
    color: #607D8B;
    margin-bottom: 5rpx;
    font-size: 30rpx;
}
.menu image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.hot{
    display: block;
    text-align: center;
    flex-wrap: wrap;
    color:   black;
    margin: 30rpx;
}

.wrap{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    background-color: white;
    border-radius: 16rpx;
    border: 3rpx solid #ebebeb;
}

.wrap .product{
    display: flex;
    flex-direction: column;
    width: 40%;
    margin: 10rpx 10rpx;
    align-items: center;
    color: #607D8B;
    padding: 6rpx;
    background-color: white;
    justify-content: center;
}

.product image{
    width: 100%;
    border-radius: 16rpx;
}

.info .pro_name{
    font-size: 30rpx;
}

.info .price{
    color: #FF0033;
}